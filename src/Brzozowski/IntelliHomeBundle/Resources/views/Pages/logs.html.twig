{% extends "BrzozowskiIntelliHomeBundle::base.html.twig" %}

{% block pageTitle %}
    Logi | {{ parent() }}
{% endblock %}

{% block pageContainer %}
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span> Logi
            </div>
            <div class="panel-body scroll-table">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Data</th>
                        <th>Czas</th>
                        <th>Treść</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set id = 0 %}
                    {% for log in logs %}
                        {% set id = id+1 %}
                        <tr>
                            <td>{{ id }}</td>
                            <td>{{ log.date|date('d.m.Y') }}</td>
                            <td>{{ log.time|date('H:i') }}</td>
                            <td>{{ log.content }}</td>
                        </tr>
                    {% else %}
                    <tr>
                        <td colspan="4">Brak logów systemowych</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br><br>
{% endblock %}